APP_NAME=Lifespan
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=lifespan_beta
DB_USERNAME=lifespan_user
DB_PASSWORD=lifespan_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
# In Docker (docker-compose), cache uses Redis; compose sets CACHE_DRIVER=redis and REDIS_HOST=redis.
# For production with many spans, set CACHE_DRIVER=redis and add a Redis service.
# PUBLIC_SPAN_BROWSER_MAX_AGE=300  # Browser Cache-Control max-age (seconds). Default 300 (5 min) so users get updates after server invalidation.
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=525600

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
# REDIS_CLIENT=predis (set in docker-compose for local; use if phpredis extension not installed)

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
# Cloudflare R2 Configuration
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_URL=
R2_ENDPOINT=https://ACCOUNT_ID.r2.cloudflarestorage.com

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Local Nominatim (docker-compose nominatim service). Use for OSM/geocoding experiments.
# From host: http://localhost:7001. From app container: http://nominatim:8080
NOMINATIM_BASE_URL=

# Simplify polygon output so large boundaries (e.g. Greater London) are storable.
# Tolerance in degrees; 0.0005 yields ~683 points for London (fits 8000 limit).
# NOMINATIM_POLYGON_THRESHOLD=0.0005

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

